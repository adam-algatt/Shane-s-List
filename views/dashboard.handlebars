<section class="container-fluid px-5">
    <h2 class="pb-4">Create New Post</h2>

    <form class="new-post-form px-5">
        <div class="pb-3">
            <label for="post-title">Title:     </label>
            <input type="text" id="post-title" name="post-title" required/>
        </div>
        <div class="pb-3">
            <label for="post-description">Item Description:    </label>
            <input type="text" id="post-description" name="post-description" required />
        </div>
        <div id="category_div">
            <label for="category">Select Category:    </label>
            <select name="post-category" id="category" required>
                <option value="1">Automotive</option>
                <option value="2">Clothing</option>
                <option value="3">Electronics</option>
                <option value="4">Home</opiont>
                <option value="5">Outdoor</option>
            </select>
        </div>
        <button type="submit" class="btn p-3">Save</button>
    </form>
</section>

<script src="/javascript/add_post.js"></script>

